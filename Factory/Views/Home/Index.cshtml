@{
  Layout = "_Layout";
}

@using Factory.Models

<div class="container">
  <h5>@Html.ActionLink("Add Engineer", "Create", "Engineers", null, new {@class ="pageLink"})</h5>
  <h5>@Html.ActionLink("Add Machine", "Create", "Machines", null, new {@class ="pageLink"})</h5>
  <img src="~/image/machine.jpg">

  <div class="row">
    <div class="col">
      @if (ViewBag.Engineers.Count == 0) //Engineers List
      {
        <h4>No Engineers yet!</h4>
      }
      else
      {
        <h4>Engineers List</h4>
        <h6>*Click on Engineer to See Details* </h6>
        @foreach (Engineer engineer in @ViewBag.Engineers)
        {
          <li>@Html.ActionLink($"{engineer.Name}", "Details", "Engineers", new { id = engineer.EngineerId }, new {@class ="wordLink"})</li>
        }
      }
    </div>

    <div class="col">
      

      @if (ViewBag.Machines.Count == 0) //Machine List
      {
        <h4>No Machine yet!</h4>
      }
      else
      {
        <h4>Machine List</h4>
        <h6>*Click on Machine to See Details* </h6>
        @foreach (Machine machine in ViewBag.Machines)
        {
          <li>@Html.ActionLink($"{machine.Name}", "Details", "Machines", new { id = machine.MachineId }, new {@class ="wordLink"})</li>
        }
      }
    </div>
  </div>
</div>