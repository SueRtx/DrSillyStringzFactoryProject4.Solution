@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;

<div class="container">
<h1>Machines</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Machines have been added yet!</h3>
  } 
  else
  {
    <h4>* Click on Machine to See Details *</h4>
    @foreach (Machine machine in Model)
    {
      <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId }, new { @class="linkWordColor" })</li>
    }
  }

  <h5 class="pageLink">@Html.ActionLink("Add new Machine", "Create")</h5>
  <h5 class="pageLink">@Html.ActionLink("Home", "Index", "Home")</h5>
</div>
