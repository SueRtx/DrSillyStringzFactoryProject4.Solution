@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="container">
  <h2>Engineer List</h2>

  @if (@Model.Count == 0)
  {
    <h4>Engineer List is EMPTY!</h4>
  } 
  else
  {
  <h4>* Click on Engineer to See Details *</h4>

 
    @foreach(Engineer engineer in Model)
    {
      <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId }, new { @class="linkWordColor" }) 
        @engineer.DateHired
      </li>
    }
  


  @* <h5 class="pageLink">@Html.ActionLink("Machine List", "Index", "Machines")</h5> *@
  }
  
  <h5 class="pageLink">@Html.ActionLink("Add Engineer", "Create")</h5>
  
  <h5 class="pageLink">@Html.ActionLink("Home", "Index", "Home")</h5>

</div>