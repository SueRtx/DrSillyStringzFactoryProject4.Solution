@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<div class="container">
  <h2>Engineer Details</h2>
  <hr />
  <h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
  <h3>@Html.DisplayNameFor(model => model.DateHired): @Html.DisplayFor(model => model.DateHired)</h3>

  @if(@Model.JoinEntities.Count == 0)
  {
    <h4>This Engineer Does Not Contain Any Machine!</h4>
  }
  else
  {
    <h4>Machines the Engineer Contains:</h4>
    
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Machine.Name</li>
    }
    
  }
  
  <h5 class="pageLink">@Html.ActionLink("Add Machine", "Index", "Machines")</h5>

  <h5 class="pageLink">@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</h5>

  <h5 class="pageLink">@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</h5>

  <h5 class="pageLink">@Html.ActionLink("Engineer List", "Index")</h5>

</div>
